<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_time_stamp"
        android:text="01/02/2031 04:05"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/holoGrey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="7dp"
        android:alpha="0.8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/chat_confirmation_msg"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/m_message_tv"
                android:textSize="16sp"
                android:textColor="@color/quantum_black_text"
                android:text="Confirmation Message"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:src="@drawable/ic_confirm_event"
                android:id="@+id/m_status_iv"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_for_det_txt"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/m_profile_iv"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/m_delivered"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:text="Delivered"
        android:visibility="gone"
        />




</LinearLayout>
